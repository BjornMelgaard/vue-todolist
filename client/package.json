{
  "name": "vue-todolist",
  "version": "1.0.0",
  "description": "Nuxt.js project",
  "author": "BjornMelgaard <melgaardbjorn@gmail.com>",
  "private": true,
  "dependencies": {
    "@nuxtjs/apollo": "^0.1.0",
    "@nuxtjs/axios": "^3.0.1",
    "@nuxtjs/bulma": "^1.0.2",
    "@nuxtjs/font-awesome": "^1.0.2",
    "buefy": "^0.4.6",
    "cookie": "^0.3.1",
    "js-cookie": "^2.1.4",
    "nuxt": "^1.0.0-rc3"
  },
  "scripts": {
    "dev": "PORT=$CLIENT_PORT_DEV API_PORT=$SERVER_PORT_DEV nuxt",
    "dev:debug": "PORT=$CLIENT_PORT_DEV API_PORT=$SERVER_PORT_DEV node --inspect node_modules/.bin/nuxt",
    "test": "export PORT=$CLIENT_PORT_TEST; export API_PORT=$SERVER_PORT_TEST; nuxt build && nuxt start",
    "build": "nuxt build",
    "start": "nuxt start",
    "generate": "nuxt generate",
    "lint": "eslint --ext .js,.vue --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --ext .js,.vue --ignore-path .gitignore .",
    "precommit": "yarn run lint",
    "inspect-size": "nuxt build -a"
  },
  "devDependencies": {
    "babel-eslint": "^7.2.3",
    "eslint": "^4.3.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-html": "^3.1.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "node-sass": "^4.5.3",
